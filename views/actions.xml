<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <!-- Acción para Incidencias -->
    <record id="action_incidencias" model="ir.actions.act_window">
        <field name="name">Incidencias</field>
        <field name="res_model">incidencias.incidencia</field>
        <field name="view_mode">tree,kanban,form</field>
        <!-- NOTA: Removemos las referencias a vistas que aún no existen
             Odoo las encontrará automáticamente por el modelo -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay incidencias registradas.
            </p>
            <p>
                Cree una nueva incidencia para comenzar a gestionar problemas.
            </p>
        </field>
        <field name="context">
            {
                'search_default_abiertas': 1,
                'default_estado_actual': 'abierta'
            }
        </field>
        <field name="limit">80</field>
    </record>

    <!-- Vista heredada de usuarios -->
    <record id="inherit_incidencia" model="ir.ui.view">
        <field name="name">Incidencia</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Incidencias">
                    <field name="incidencias_id" widget="one2many_list" readonly="1">
                        <tree>
                            <field name="titulo" width="50"/>
                            <field name="descripcion"/>
                            <field name="fecha_creacion"/>

                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Acción básica para Encuestas -->
    <record id="action_encuestas" model="ir.actions.act_window">
        <field name="name">Encuestas</field>
        <field name="res_model">incidencias.encuesta</field>
        <field name="view_mode">tree,form</field>
    </record>

     <!-- Acción para Comentarios -->
    <record id="action_comentarios" model="ir.actions.act_window">
        <field name="name">Comentarios</field>
        <field name="res_model">incidencias.comentario</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_group_incidencia': 1}</field>
        <field name="limit">50</field>
    </record>

    <!-- Acción básica para Estadisticas -->
    <record id="action_estadisticas" model="ir.actions.act_window">
        <field name="name">Estadisticas</field>
        <field name="res_model">incidencias.estadisticas</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>