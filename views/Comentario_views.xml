<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===================== -->
    <!-- VISTA SEARCH -->
    <!-- ===================== -->
    <record id="view_comentario_search" model="ir.ui.view">
        <field name="name">incidencias.comentario.search</field>
        <field name="model">incidencias.comentario</field>
        <field name="arch" type="xml">
            <search string="Buscar comentarios">
                <field name="incidencia_id"/>
                <field name="create_uid"/>
                <filter string="Hoy"
                        name="hoy"
                        domain="[('fecha','&gt;=',context_today())]"/>
            </search>
        </field>
    </record>

    <!-- ===================== -->
    <!-- VISTA KANBAN -->
    <!-- ===================== -->
    <record id="view_comentario_kanban" model="ir.ui.view">
        <field name="name">incidencias.comentario.kanban</field>
        <field name="model">incidencias.comentario</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="incidencia_id"/>
                <field name="create_uid"/>
                <field name="fecha"/>
                <field name="contenido"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">

                            <div class="o_kanban_record_top">
                                <strong>
                                    <field name="create_uid"/>
                                </strong>
                            </div>

                            <div class="o_kanban_card_footer mt8">
                            <small class="text-muted">
                                <i class="fa fa-calendar me-1"/>
                                <field name="fecha" widget="date"/>
                            </small>
                        </div>

                            <div class="mt8">
                                <field name="contenido"/>
                            </div>

                            <div class="mt8 text-muted">
                                <small>
                                    Incidencia:
                                    <field name="incidencia_id"/>
                                </small>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ===================== -->
    <!-- VISTA TREE -->
    <!-- ===================== -->
    <record id="view_comentario_tree" model="ir.ui.view">
        <field name="name">incidencias.comentario.tree</field>
        <field name="model">incidencias.comentario</field>
        <field name="arch" type="xml">
            <tree string="Comentarios">
                <field name="incidencia_id"/>
                <field name="create_uid"/>
                <field name="fecha"/>
                <field name="contenido"/>
            </tree>
        </field>
    </record>

    <!-- ===================== -->
    <!-- VISTA FORM -->
    <!-- ===================== -->
    <record id="view_comentario_form" model="ir.ui.view">
        <field name="name">incidencias.comentario.form</field>
        <field name="model">incidencias.comentario</field>
        <field name="arch" type="xml">
            <form string="Comentario">
                <sheet>

                    <group>
                        <group string="Contexto">
                            <field name="incidencia_id"/>
                             <field name="empleado_id"/>
                        </group>

                        <group string="Autor">
                            <field name="create_uid" readonly="1"/>
                            <field name="fecha" readonly="1"/>
                        </group>
                    </group>

                    <group string="Contenido">
                        <field name="contenido"
                               nolabel="1"
                               widget="text"
                               style="min-width: 1265px;"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

</odoo>