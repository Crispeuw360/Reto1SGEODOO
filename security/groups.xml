<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Grupos principales -->
    <record id="grupo_administrador" model="res.groups">
        <field name="name">Employer</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="grupo_participantes" model="res.groups">
        <field name="name">Employee</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Reglas de registro (OPCIONAL - si las necesitas) -->
    <record id="regla_incidencia_employee" model="ir.rule">
        <field name="name">Employee: solo sus incidencias</field>
        <field name="model_id" ref="model_incidencias_incidencia"/>
        <field name="domain_force">[('empleado_origen_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('grupo_participantes'))]"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">0</field>
    </record>

    <record id="regla_comentario_employee" model="ir.rule">
        <field name="name">Employee: solo sus comentarios</field>
        <field name="model_id" ref="model_incidencias_comentario"/>
        <field name="domain_force">[('empleado_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('grupo_participantes'))]"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">0</field>
    </record>
</odoo>